  <h3><%= t("volume_prices") %></h3>
  <table class="index sortable" data-hook data-sortable-link="<%= url_for action: 'update_volume_price_positions' %>">
    <thead data-hook="volume_price_header">
      <tr>
        <th colspan="2"><%= Spree.t("name") %></th>
        <th><%= Spree.t("discount_type") %></th>
        <th><%= Spree.t("range") %> <span class="required">*</span></th>
        <th><%= Spree.t("amount") %> <span class="required">*</span></th>
        <th class="actions"><%= Spree.t("action") %></th>
      </tr>
    </thead>
    <tbody id="volume_prices">
      <%= f.fields_for :volume_prices do |vp_form| %>
        <%= render partial: 'spree/admin/service_types/volume_price_fields', locals: { f: vp_form } %>
      <% end %>
    </tbody>
  </table>
  <%= link_to_add_fields Spree.t("add_volume_price"), "tbody#volume_prices", {class: 'button fa fa-plus'} %>
  <br/><br/>

