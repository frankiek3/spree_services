<table class="index">
  <colgroup>
    <col style="width: 80%" />
    <col style="width: 20%" />
  </colgroup>
  <thead>
    <tr data-hook="available_header">
      <th><%= Spree.t(:name) %></th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @service_types.each do |service_type| %>
      <tr id="row_<%= service_type.id %>" data-hook="available_row" class="<%= cycle('odd', 'even')%>">
        <td><%= service_type.name %></td>
        <td class="actions">
          <%= link_to Spree.t(:select), select_admin_service_type_path(service_type), class: 'ajax button select_properties_from_service_type fa fa-ok' %>
        </td>
      </tr>
    <% end %>
    <% if @service_types.empty? %>
     <tr data-hook="available_none"><td colspan="2"><% Spree.t(:none) %>.</td></tr>
    <% end %>
  </tbody>
</table>
