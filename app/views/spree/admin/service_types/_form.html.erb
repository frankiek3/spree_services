<div data-hook="admin_service_type_form_fields" class="row">
  <div class="row">
    <div class="alpha four columns">
      <%= f.field_container :name do %>
        <%= f.label :name, Spree.t(:name) %> <span class="required">*</span><br />
        <%= f.text_field :name, :class => 'fullwidth' %>
        <%= f.error_message_on :name %>
      <% end %>
    </div>


    <div class="alpha four columns">
      <%= f.field_container :limit do %>
        <%= f.label :limit, Spree.t(:limit) %><br />
        <%#f.collection_select(:limit, Spree::ServiceLimit.all, :id, :name, {}, { :class => 'select2 fullwidth' }) %>
        <%= f.select(:limit, [['Disabled Service', '0'], ['Service Not Yet Offered', '1'], ['Limited by Order', '2'], ['Limited by Account', '3']], {}, { :class => 'select2 fullwidth' }) %>
      <% end %>
    </div>

    <div class="alpha four columns">
      <%= f.field_container :limit_amount do %>
        <%= f.label :limit_amount, Spree.t(:limit_amount) %><br />
        <%= f.text_field :limit_amount, :class => 'fullwidth' %>
      <% end %>
    </div>
  </div>

  <div class="row">
<%= render :partial => 'spree/admin/service_types/service_fields', :locals => { :f => f, :service_fields => @service_fields } %>
  </div>

  <div class="row">
<%= render :partial => 'spree/admin/service_types/volume_pricing_edit', :locals => { :f => f, :volume_prices => @volume_prices } %>
  </div>
</div>

